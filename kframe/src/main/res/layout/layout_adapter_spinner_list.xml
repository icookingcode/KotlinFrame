<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/blank_l"
    android:paddingTop="@dimen/blank_m"
    android:paddingRight="@dimen/blank_l"
    android:paddingBottom="@dimen/blank_m">

    <ImageView
        android:id="@+id/imgv_spinner_list"
        android:layout_width="@dimen/toolbar_image_size"
        android:layout_height="@dimen/toolbar_image_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/blank_m" />

    <TextView
        android:id="@+id/txtv_spinner_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:minWidth="@dimen/spinner_content_w"
        android:textColor="#000000"
        android:textSize="@dimen/toolbar_normal_text" />
</LinearLayout>
